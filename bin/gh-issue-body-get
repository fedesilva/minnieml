#!/usr/bin/env bash
set -euo pipefail

if [[ $# -lt 1 || $# -gt 2 ]]; then
  echo "Usage: $(basename "$0") <issue-number> [repo]" >&2
  echo "Example: $(basename "$0") 220 fedesilva/minnieml" >&2
  exit 1
fi

issue="$1"
repo="${2:-fedesilva/minnieml}"

gh issue view "$issue" --repo "$repo" --json body --jq .body
