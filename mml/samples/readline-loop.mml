// REPL-style loop using readline
// Sequencing via function chaining (no let...in yet)

fn process(input: String): String = concat "You said: " input;
fn loop(): Unit = loop_with (readline());
fn loop_with(s: String): Unit = loop_after (println (process s));
fn loop_after(u: Unit): Unit = loop();
fn main(): Unit = loop();
