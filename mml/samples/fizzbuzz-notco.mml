
fn mod(a: Int, b: Int): Int = a - (a / b) * b;

fn fizzbuzz(n: Int): Unit =
  if n > 0 then
    fizzbuzz (n - 1);
    if mod n 15 == 0 then println "FizzBuzz"
    else if mod n 3 == 0 then println "Fizz"
    else if mod n 5 == 0 then println "Buzz"
    else println (to_string n)
  else
    ()
;

fn main(): Unit = fizzbuzz 1000000;
